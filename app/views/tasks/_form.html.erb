<%= form_for @task, url: submit_path do |f| %>

    <div>
      <%= f.label "タイトル" %><br />
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label "概要" %><br />
      <%= f.text_area :overview, :size => "50x5" %>
    </div>
    <div>
      <%= f.label "詳細" %><br />
      <%= f.text_area :detail, :size => "50x10" %>
    </div>
    <div>
      <%= f.label "関連プロジェクト" %><br />
      <%= f.collection_select :project_id, Project.all, :id, :title %>
    </div>
    <div>
      <%= f.label "開始日" %><br />
      <%= f.date_field :start %>
    </div>
    <div>
      <%= f.label "期限" %><br />
      <%= f.date_field :limit %>
    </div>

    <% if @task.errors.any? %>
        <%= @task.errors.messages[:title][0] %>
    <% end %>

    <p>
      <%= f.submit %>
    </p>

<% end %>
