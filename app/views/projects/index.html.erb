<h1>
  Projects
</h1>

<u1>
  <% @projects.each do |project| %>
      <li>
        <%= link_to project.title, project_path(project.id) %> (未<%= project.tasks.unfinished.count %> : 完<%= project.tasks.finished.count %> / <%= project.tasks.count %>)
        <%= link_to "[編集]", edit_project_path(project.id) %>
        <%= link_to "[削除]", project_path(project.id), method: :delete, data: { confirm: "本当に削除しますがよろしいですか？" } %>
      </li>
  <% end %>
</u1>

<p><%= link_to "追加", new_project_path %></p>
